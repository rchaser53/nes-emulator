{
	"compilerOptions": {
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"target": "es2015",
		"declaration": true,
		"module": "commonjs",
		"experimentalDecorators": true,
		"strictNullChecks": true,
    "noUnusedLocals": true,
    "sourceMap": true,
		"noEmit": false,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "es2015", "es2016", "es2017.object"]
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}